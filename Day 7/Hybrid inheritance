Write a c ++ program to implement hybrid inheritance with respect to the university examination system.

#include <iostream>
#include <string>

using namespace std;


class Person {
protected:
    string name;
    int age;

public:
    Person(string n, int a) {
        name = n;
        age = a;
    }

    void displayPerson() {
        cout << "Name: " << name << endl;
        cout << "Age: " << age << endl;
    }
};

class University {
protected:
    string universityName;
    string location;

public:
    University(string un, string loc) {
        universityName = un;
        location = loc;
    }

    void displayUniversity() {
        cout << "University Name: " << universityName << endl;
        cout << "Location: " << location << endl;
    }
};
class Student : public Person, public University {
private:
    int rollNo;
    string course;

public:
    Student(string n, int a, string un, string loc, int r, string c) 
        : Person(n, a), University(un, loc) {
        rollNo = r;
        course = c;
    }

    void displayStudent() {
        displayPerson();
        displayUniversity();
        cout << "Roll No: " << rollNo << endl;
        cout << "Course: " << course << endl;
    }
};

class Exam : public Student {)
private:
    float marks;
    string grade;

public:
    Exam(string n, int a, string un, string loc, int r, string c, float m, string g) 
        : Student(n, a, un, loc, r, c) {
        marks = m;
        grade = g;
    }

    void displayExam() {
        displayStudent();
        cout << "Marks: " << marks << endl;
        cout << "Grade: " << grade << endl;
    }
};

int main() {
    Exam exam("Jini Doe", 20, "XYZ University", "New York", 101, "B.Tech", 85.5, "A");
    exam.displayExam();

    return 0;
}
 
