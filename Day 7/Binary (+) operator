Write a c++ program to overload the binary (+) opertor.

#include <iostream>

using namespace std;

class Complex {
private:
    double real;
    double imag;

public:
    // Constructor
    Complex(double r = 0.0, double i = 0.0) {
        real = r;
        imag = i;
    }

    // Getter methods
    double getReal() const {
        return real;
    }

    double getImag() const {
        return imag;
    }

    // Overload + operator
    Complex operator+(const Complex& other) const {
        return Complex(real + other.real, imag + other.imag);
    }

    // Display complex number
    void display() const {
        cout << real << " + " << imag << "i" << endl;
    }
};

int main() {
    // Create complex numbers
    Complex c1(3.0, 4.0);
    Complex c2(2.0, 1.0);

    // Add complex numbers using + operator
    Complex sum = c1 + c2;

    // Display results
    cout << "Complex Number 1: ";
    c1.display();
    cout << "Complex Number 2: ";
    c2.display();
    cout << "Sum: ";
    sum.display();

    return 0;
}
